<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="itemBackground">@color/transparent</item>
<!--        <item name="android:textColor">@color/gray</item>-->
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="itemBackground">@color/transparent</item>
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="CustomChipStyle2" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="cornerSize">1%</item>
    </style>




</resources>